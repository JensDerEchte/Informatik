import java.util.Random;
import java.util.Scanner; 
public class Zahlenraten {
    Random generator; 
    Scanner tastatur;

    public Zahlenraten() {
        generator = new Random(); 
        tastatur = new Scanner(System.in);
    }
    // Hausis:
    // 1. Anzahl der Versuche mitzaehlen und Kommentieren
    // 2. Man soll wiederholt spielen kÃ¶nnen
    public void ratenG8() {
        int geraten = 0;
        int versuche = 0;
        int eingabe = 1;
        while(eingabe == 1) {
            geraten = 0;
            int  zufallszahl = generator.nextInt(100) + 1;
            while (zufallszahl != geraten) {
                System.out.println("Rate meine Zahl: ");
                geraten = tastatur.nextInt();
                if (zufallszahl < geraten){
                    System.out.println("Meine Zahl ist kleiner! ");
                    versuche += 1;
                } else if (zufallszahl > geraten) {
                    System.out.println("Meine Zahl ist groesser! ");
                    versuche += 1;
                } else if(zufallszahl == geraten) {
                    System.out.println("Hurra, Du hast sie geraten! ");
                }
            }
            System.out.println("Deine Versuche: " + versuche);
            System.out.println("Weiterspielen? Ja (1) Nein (2)");
            int weiter = tastatur.nextInt();
            if(weiter == 2) {
                eingabe += 1;
            }
            if(versuche == 1) {
                System.out.println("Unglaublich!");
            }else if(versuche <= 5) {
                System.out.println("Sehr gut!");
            }else if(versuche <= 10) {
                System.out.println("War schon gut!");
            }else if(versuche <= 20) {
                System.out.println("Das geht besser!");
            }else {
                System.out.println("Naja!");
            }
        }
    }
}
