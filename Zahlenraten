import java.util.Random;
import java.util.Scanner; 
public class Zahlenraten {
    Random generator; 
    Scanner tastatur;

    public Zahlenraten() {
        generator = new Random(); 
        tastatur = new Scanner(System.in);
    }

    public void ratenG8() {
        int weiter; // 1 bedeutet "weiterspielen"
        // aeussere Schleife zaehlt Parien 
        do {
            int zufallszahl = generator.nextInt(100) + 1;
            int geraten;
            int versuche = 0;

            // Innere Schleife laeutf bis Zahl geraten wurde
            do {
                System.out.println("Rate meine Zahl: ");
                geraten = tastatur.nextInt();
                versuche += 1;
                if (zufallszahl < geraten){
                    System.out.println("Meine Zahl ist kleiner! ");
                } else if (zufallszahl > geraten) {
                    System.out.println("Meine Zahl ist groesser! ");
                } else if(zufallszahl == geraten) {
                    System.out.println("Hurra, Du hast sie geraten! ");
                }
            }while (zufallszahl != geraten);
            System.out.printf("Du hast %d geraten. ", versuche);
            if(versuche == 1) {
                System.out.println("Am schummeln bist du!");
            }else if(versuche <= 5) {
                System.out.println("Sehr gut(1)!");
            }else if(versuche <= 7) {
                System.out.println("Gut(2)!");
            }else {
                System.out.println("ausreichend(4)!");
            }
            System.out.println("Weiterspielen? Ja (1) Nein (2)");
            weiter = tastatur.nextInt();
        } while (weiter == 1);
    }

    public void ratenUmgekehrt() {
        int weiter;
        do {
            int unten = 1;
            int oben = 1000;
            int eingabe;
            int versuche = 0; 
            do {
                int mitte = (oben + unten) / 2;
                System.out.print("Ist es die " + mitte + "? (1=richtig, "
                    + "2 = Deine Zahl ist kleiner, "
                    + "3 = Deine Zahl ist groesser): ");
                eingabe = tastatur.nextInt();

                if (eingabe == 2) {
                    // Benutzerzahl ist kleiner
                    // Setze obere Grenze auf mitte - 1
                    // da mitte nicht richtig sein kann
                    oben = mitte - 1;
                }else if(eingabe == 3) {
                    unten = mitte + 1;
                }
                versuche += 1;
                System.out.println("Nur " + versuche + " Versuche");
            } while(eingabe != 1);
            // Benutzer hat die Zahl geraten

            System.out.println("Hurra! Ich bin so schlau!");
            System.out.println("Weiterspielen? Ja (1) Nein (2)");
            weiter = tastatur.nextInt();
        }while(weiter == 1);
        
    }
    public void ratenUmgekehrt2() {
        int weiter;
        do {
            int unten = 1;
            int oben = 100;
            int eingabe;
            int versuche = 0; 
            int mitte;
            System.out.println("WÃ¤hle eine Zahl zwischen " + unten + " und " + oben);
            eingabe = tastatur.nextInt();
            do {
                mitte = (oben + unten) / 2;
                System.out.println("Ich bin bei " + mitte);
                if(mitte < eingabe){
                    unten = mitte + 1;   
                }else if(mitte > eingabe) {
                    oben = mitte - 1;
                }
                versuche += 1;
            } while(eingabe != mitte);
            System.out.println("Hurra! Ich bin so schlau!");
            System.out.println("Meine Versuche: " + versuche);
            System.out.println("Weiterspielen? Ja (1) Nein (2)");
            weiter = tastatur.nextInt();
        }while(weiter == 1);
        
    }
}
