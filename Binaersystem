public class Binaersystem {
    public static void dezimalZuBinaer(int dezimal){
        System.out.println("Wandle " + dezimal + " ins Binaersystem um");
        int zahl = 128; 
        int bit = 8;
        do {
            if(dezimal >= zahl){
                System.out.print("1");
                dezimal = dezimal - zahl;
            }else {
                System.out.print("0");
            }
            bit -= 1;
            zahl /= 2; 
        }while(bit > 0);
    }
}
