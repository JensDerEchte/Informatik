import java.util.Arrays;
public class PrimzahlSieb {
    public int[] sieben(int maxZahl){
        /// Deklariere ein Array von Wahrheitswerten
        boolean[] zahlen = new boolean[maxZahl + 1]; 
        int anzahl = 0;
        // Setze alle Werte auf <true>
        for(int i = 2; i < zahlen.length; i++){
            zahlen[i] = true;
        }

        // Schleifen Anfang
        for(int y = 2; y < zahlen.length; y++){
            if(zahlen[y] == true) {
                // y ist eine Primzahl
                // Makiere alle Vielfachen von y als <false>
                // Gehe mit einer Schleife von y * 2 bis zahlen.length 
                // als <false>
                for(int i = y * 2; i < zahlen.length; i += y){
                    zahlen[i] = false; 
                }
                anzahl ++;
            }
        }
        //Schleifen Ende

        // Am Ende: ALT Gib alle Werte aus
        ausgabe(zahlen);
        
        int[] primzahlen = new int[anzahl];
        // Schleife die durch zahlen geht und immer, wenn 
        // ein Wert true ist, wird der aktuelle Index 
        // in primzahlen eingespeichert;
        for(int i = 0, pi = 0; pi < anzahl; i++) {
            if(zahlen[i] == true){
                primzahlen[pi] = i;
                pi++;
            }
        }
        return primzahlen;
    }
    
    public void ausgabe(boolean[] a) {
        for(int i = 1; i < a.length; i++){
            if (a[i] == true) {
                System.out.printf("%5d", i);
            }else {
                System.out.printf(" %5s", "-");
            }
            
            if (i % 10 == 0) {
                System.out.println();
            }
        }
    }
}
