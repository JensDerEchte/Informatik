import java.util.Scanner;
public class KAutomat {
    private Scanner tastatur;
    private int kaugummies;
    private int schoki;
    private int geld;
    public KAutomat(){
        tastatur = new Scanner(System.in);  
        kaugummies = 10;
        schoki = 5;
        geld = 0;
    }

    public void kaufen() {
        System.out.println("Kau oder Schoki?");
        String eingabe = tastatur.nextLine();
        // == funktioniert nicht bei Strings 
        if(eingabe.equals( "Kau")) {
            if(kaugummies > 0) {
                System.out.println("Hier ist ein Kau");
                kaugummies -= 1;
                geld += 1;
            } else {
                System.out.println("Kau sind aus");
            }
        } else if(eingabe.equals("Schoki")) {
            if(schoki > 0) {
                System.out.println("Hier ist eine Schoki");
                schoki -= 1;
                geld += 1;
            } else {
                System.out.println("Schoki sind aus");
            }
        } else {
            System.out.println("Kensnschnisch");
        }
    }
    
    public void status() {
        System.out.println("Im KAutomaten gibt es: ");
        System.out.println(kaugummies + " x Kaugummies");
        System.out.println(schoki + " x Schoki");
        System.out.println(geld + " Euro");
    }
}
